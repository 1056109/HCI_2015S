<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statisticsDialog"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/curve_shape_black"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/statisticsHeaderMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/stat" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statTextMsg"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/statMsg"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statRate"
        android:layout_gravity="center_horizontal"
        android:height="300dp"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="0%"
        android:layout_marginTop="40dp"
        android:textSize="100dp" />

    <Button
        android:id="@+id/infoOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="OK"
        android:textColor="@color/violett"
        android:background="@drawable/btn_android"
        android:onClick="closeDialog"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="false" />
</LinearLayout>