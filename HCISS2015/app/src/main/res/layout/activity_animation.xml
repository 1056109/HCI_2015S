<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bgmap">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:layout_marginBottom="185dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSuspect"
                android:src="@drawable/ic_suspect"
                android:layout_gravity="center_horizontal|bottom"
                android:longClickable="false"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:layout_marginBottom="200dp"
            android:layout_marginLeft="150dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageMurder"
                android:src="@drawable/ic_murder"
                android:layout_gravity="center_horizontal|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagePolice"
                android:src="@drawable/ic_police_large"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginRight="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageHospital"
                android:src="@drawable/ic_hospital"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="20dp"
                android:focusableInTouchMode="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagePark"
                android:src="@drawable/ic_park"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="150dp" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="92dp"
        android:layout_height="121dp"
        android:layout_gravity="right|bottom"
        android:gravity="bottom"
        android:orientation="vertical"
            android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/featureProgress"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/curve_shape_black"
            android:gravity="center"
            android:text="@string/featureProgress"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btnFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/btn_feature" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="90dp"
        android:layout_gravity="center|bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/mapProgress"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/curve_shape_black"
            android:gravity="center"
            android:text="@string/mapProgress"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/btn_map" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="121dp"
        android:layout_gravity="left|bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/weaponProgress"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/curve_shape_black"
            android:gravity="center"
            android:text="@string/weaponProgress"
            android:textColor="@color/white" />


        <ImageButton
            android:id="@+id/btnWeapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/info_weapon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="121dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="120dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/colleagueState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/curve_shape_black"
            android:gravity="center"
            android:text="@string/send_collegue_start"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/btnColleague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/btn_colleague" />

    </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView7"
        android:background="@drawable/curve_shape_black"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_thirdb"
            android:id="@+id/help3b"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView8"
        android:background="@drawable/curve_shape_black"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_fifth"
            android:id="@+id/help5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:background="@drawable/curve_shape_black"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_start"
            android:id="@+id/startIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:background="@drawable/curve_shape_black"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_zero"
            android:id="@+id/help0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="@drawable/curve_shape_black"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_first"
            android:id="@+id/help1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:background="@drawable/curve_shape_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_second"
            android:id="@+id/help2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:background="@drawable/curve_shape_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_third"
            android:id="@+id/help3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:background="@drawable/curve_shape_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/anim_fourth"
            android:id="@+id/help4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="10dp" />
    </ScrollView>

</RelativeLayout>